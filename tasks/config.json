{
  "root": {
    "dir": "./",
    "dev": "./assets",
    "dist": "./assets",
    "release": "./release",
    "build": "./build"
  },
  "css": {
    "dev": "sass",
    "dist": "css",
    "parts": "parts",
    "extensions": "*.+(css|scss)",
    "uncss": false
  },
  "js": {
    "dev": "js/src",
    "dist": "js",
    "parts": "modules",
    "extensions": [
      ".json",
      ".js"
    ]
  },
  "modules": {
    "node": "./node_modules",
    "bower": "./bower_components"
  },
  "build": {
    "files": "./**/*.*",
    "ignore": [
      "./build/**",
      "./release/**",
      "./node_modules/**",
      "./gulpfile.js",
      "./package.json",
      "./assets/js/src/**"
    ]
  }
}
